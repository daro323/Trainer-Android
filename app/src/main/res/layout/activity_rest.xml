<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:layout_margin="@dimen/activity_margin"
             tools:context="com.trainer.ui.RestActivity">

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textAppearance="@style/Textappearance.Trainer.Headline"
      android:layout_gravity="center_horizontal"
      android:text="@string/take_rest"/>

  <com.eralp.circleprogressview.CircleProgressView
      android:id="@+id/circle_progress_view"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:layout_margin="56dp"
      app:cpv_circle_color="@color/green"
      app:cpv_circle_width="12dp"
      app:cpv_background_circle_width="4dp"
      app:cpv_background_circle_color="@color/colorPrimaryDark"
      app:cpv_text_prefix=""
      app:cpv_text_size="40"
      app:cpv_text_color="@color/colorPrimaryDark"/>

  <Button
      android:id="@+id/skip_rest_btn"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_gravity="bottom"
      android:text="@string/skip"/>

</FrameLayout>
