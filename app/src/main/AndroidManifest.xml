<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.trainer">

  <uses-permission android:name="android.permission.VIBRATE"/>
  <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
  <uses-permission android:name="android.permission.WAKE_LOCK"/>

  <application
      android:name=".TrainingApplication"
      android:allowBackup="true"
      android:icon="@mipmap/ic_launcher"
      android:label="@string/app_name"
      android:supportsRtl="true"
      android:theme="@style/AppTheme">
    <activity
        android:name=".ui.TrainingPlanSelectActivity"
        android:screenOrientation="portrait"
        android:label="@string/select_training_plan">
      <intent-filter>
        <action android:name="android.intent.action.MAIN"/>

        <category android:name="android.intent.category.LAUNCHER"/>
      </intent-filter>
    </activity>
    <activity
        android:name=".ui.training.TrainingDaysListActivity"
        android:screenOrientation="portrait"/>
    <activity
        android:name=".ui.training.WorkoutListActivity"
        android:screenOrientation="portrait"/>
    <activity
        android:name=".ui.training.SerieActivity"
        android:launchMode="singleTop"
        android:screenOrientation="portrait"/>
    <activity
        android:name=".ui.training.stretch.StretchActivity"
        android:screenOrientation="portrait"/>
    <activity
        android:name=".ui.training.rest.RestActivity"
        android:launchMode="singleTop"
        android:screenOrientation="portrait"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen"/>

    <service android:name=".modules.countdown.CountDownService"/>

  </application>

</manifest>